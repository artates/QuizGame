<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nicolasartates.quizgame.QuizActivity">

    <ImageView
        android:id="@+id/imageView_question"
        android:layout_width="356dp"
        android:layout_height="274dp"
        app:srcCompat="@drawable/rmhome"
        app:layout_constraintTop_toTopOf="@+id/textView_Score"
        android:layout_marginTop="46dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_answer1"
        android:layout_width="149dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:width="@dimen/wid"
        android:height="@dimen/hi"
        android:text="Button"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView_question"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_answer3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_answer2"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="41dp"
        android:width="@dimen/wid"
        android:height="@dimen/hi"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/button_answer2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_question"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_answer3"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_answer4"
        tools:layout_editor_absoluteY="441dp" />

    <Button
        android:id="@+id/button_answer4"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:width="@dimen/wid"
        android:height="@dimen/hi"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView_Score"
        android:layout_width="352dp"
        android:layout_height="36dp"
        android:text="Score"
        android:textSize="24dp" />
</android.support.constraint.ConstraintLayout>
